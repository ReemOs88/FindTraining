<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/company_item"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"


                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/company_pic"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/find"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Company name"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/company_description"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="As market leader in enterprise application software, SAP helps companies of all sizes and industries run better."

                        android:textColor="@color/dark_blue"

                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_80sdp"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_location_on_24"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/phoneCall_icon"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/files_icon"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_note_add_24"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>